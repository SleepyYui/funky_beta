#!/usr/bin/env fkyrun

$TEXT_COLOUR .
$BACKGROUND_COLOUR .
$LINE_HEIGHT .

$width_of ()
$height_of ()
$text_colour_of ()
$background_colour_of ()
$line_height_of ()

$BLACK '@0x000000;'
$WHITE '@0xffffff;'
$YELLOW '@0xffff00;'

$create_screen: (width height options*)
  $screen
    std_types::object
      .width_of width
      .height_of height
  extract_options options
    TEXT_COLOUR = BLACK !screen.text_colour_of
    BACKGROUND_COLOUR = WHITE !screen.background_colour_of
    LINE_HEIGHT = 1 !screen.line_height_of
  dump! `screen

create_screen! 80 25
  BACKGROUND_COLOUR = YELLOW

create_screen! 100 40
  LINE_HEIGHT = 2

create_screen! 120 30
